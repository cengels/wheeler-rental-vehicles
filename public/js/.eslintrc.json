{
	"env": {
		"browser": true,
		"es6": true
	},
	"plugins": [
		"react"
	],
	"extends": [
		"eslint:all",
		"plugin:react/all"
	],
	"parserOptions": {
		"sourceType": "module",
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"jsx": true
		}
	},
	"rules": {
		"indent": [
			"error",
			"tab",
			{ "SwitchCase": 1 }
		],
		"linebreak-style": ["error", "unix"],
		"quotes": [
			"error",
			"single",
			{ "allowTemplateLiterals": true }
		],
		"no-magic-numbers": [
			"error",
			{
				"ignore": [0, 1],
				"enforceConst": true
			}
		],
		"semi": ["error", "always"],
		"dot-location": ["error", "property"],
		"no-tabs": "off",
		"arrow-parens": "off",
		"padded-blocks": "off",
		"eol-last": "off",
		"func-style": "off",
		"space-before-function-paren": ["error", "never"],
		"no-ternary": "off",
		"one-var": "off"
	}
}