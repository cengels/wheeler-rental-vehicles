<!DOCTYPE html>
<html>
{{>html-head-dash title="Wheeler - Dashboard"}}
<body>
<div id="page-container">
	<div id="top-bar">
		<div id="page-logo">
			<a href="/dashboard">
				<img id="wheeler-logo" src="/public/images/wheeler-logo.png">
				<div id="wheeler-label">Wheeler</div>
			</a>
		</div>

		<div id="search-panel">
			<div id="search-bar">
				<i class="fa fa-search" aria-hidden="true"></i>
				<input id="search-input" name="search-input" type="text" value=""
					   placeholder="Enter a license plate, a customer name, a location, ..."/>
			</div>
		</div>

		<div id="user-panel">
			<img id="user-picture" alt="profile-picture" src="/public/images/blank-profile-picture.png"/>
			<div id="user-info">
				<div id="user-name">Anonymous User</div>
				<div id="user-options">
					<span id="action-settings" class="account-action">Settings</span> â€¢
					<span id="action-logout" class="account-action">Logout</span>
				</div>
			</div>
		</div>
	</div>

	<div id="navigation-bar">
		<button id="overview-tab" class="tab active">Overview</button>
		<button id="vehicles-tab" class="tab">Vehicles</button>
		<button id="locations-tab" class="tab">Locations</button>
		<button id="customers-tab" class="tab">Customers</button>
		<button id="employees-tab" class="tab">Employees</button>
		<button id="finances-tab" class="tab">Finances</button>
		<button id="statistics-tab" class="tab">Analytics</button>
		<button id="preferences-tab" class="tab">Preferences</button>
		<button id="about-tab" class="tab">About</button>
	</div>

	<div id="content">
		{{>tab-overview}}
	</div>
</div>
</body>
</html>